{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window - AnguLogin",
  "windows": [
    "main"
  ],
  "permissions": [
    "core:default",
    "shell:default",
    "dialog:default",
    "os:default",
    "fs:default",
    "core:window:allow-start-dragging",
    {
      "identifier": "fs:allow-write-text-file",
      "allow": [
        {
          "path": "$DOWNLOAD/**/*"
        },
        {
          "path": "$DOCUMENT/**/*"
        },
        {
          "path": "$HOME/**/*"
        },
        {
          "path": "$DESKTOP/**/*"
        }
      ]
    },
    {
      "identifier": "fs:allow-read-text-file",
      "allow": [
        {
          "path": "$DOWNLOAD/**/*"
        },
        {
          "path": "$DOCUMENT/**/*"
        },
        {
          "path": "$HOME/**/*"
        },
        {
          "path": "$DESKTOP/**/*"
        }
      ]
    }
  ]
}