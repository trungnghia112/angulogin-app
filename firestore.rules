rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }

    // Function to check if user owns the document
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    // Profiles Collection
    match /profiles/{profileId} {
      allow read, update, delete: if isOwner(resource.data.userId);
      allow create: if isOwner(request.resource.data.userId);
    }

    // Folders Collection
    match /folders/{folderId} {
      allow read, update, delete: if isOwner(resource.data.userId);
      allow create: if isOwner(request.resource.data.userId);
    }

    // Settings Collection
    match /settings/{userId} {
      allow read, write: if isOwner(userId);
    }

    // Users Collection — owner can read/create, but NOT update plan fields
    // Plan/subscription fields are ONLY updated by Cloud Function (admin SDK)
    match /users/{userId} {
      allow read: if isOwner(userId);
      allow create: if isOwner(userId);
      allow update: if isOwner(userId)
        && !request.resource.data.diff(resource.data).affectedKeys()
            .hasAny(['plan', 'planExpiry', 'profileLimit', 'subscriptionStatus',
                      'lsCustomerId', 'lsSubscriptionId']);
    }

    // RPA Catalog — public read, admin-only write
    match /rpa-catalog/{doc} {
      allow read: if true;
      allow write: if isAuthenticated()
        && request.auth.token.admin == true;
    }

    // RPA Templates — public read, admin-only write
    match /rpa-templates/{templateId} {
      allow read: if true;
      allow write: if isAuthenticated()
        && request.auth.token.admin == true;
    }

    // Default rule: Deny all
    match /{document=**} {
      allow read, write: if false;
    }
  }
}