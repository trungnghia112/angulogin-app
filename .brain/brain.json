    "project": {
        "name": "Chrome Profile Manager",
        "type": "desktop-app",
        "status": "active",
        "description": "Tauri + Angular app to manage Chrome profiles stored on external drives"
    },
    "tech_stack": {
        "frontend": {
            "framework": "Angular 21",
            "ui_library": "PrimeNG 21",
            "css": "Tailwind CSS 4",
            "state": "Angular Signals"
        },
        "backend": {
            "runtime": "Tauri 2 (Rust)",
            "features": [
                "filesystem",
                "shell"
            ]
        },
        "database": {
            "type": "local-json",
            "description": "Profile metadata stored as JSON files in profile directories"
        }
    },
    "architecture": {
        "layout": "Two-Level Navigation",
        "components": {
            "main_nav": {
                "type": "Icon Rail",
                "width": "64px",
                "features": [
                    "browsers",
                    "automation",
                    "teams",
                    "extensions"
                ]
            },
            "sub_sidebar": {
                "type": "Contextual Sidebar",
                "width": "240px",
                "dynamic": true,
                "shows_for": [
                    "browsers",
                    "extensions"
                ]
            },
            "content": {
                "type": "Main Content Area",
                "width": "flex-1"
            }
        }
    },
    "features": [
        {
            "id": "browsers",
            "name": "Browsers",
            "status": "implemented",
            "route": "/browsers",
            "has_sidebar": true,
            "description": "Manage Chrome profiles - scan, launch, create, rename, delete"
        },
        {
            "id": "automation",
            "name": "Automation",
            "status": "placeholder",
            "route": "/automation",
            "has_sidebar": false,
            "description": "Automate browser workflows (coming soon)"
        },
        {
            "id": "teams",
            "name": "Teams",
            "status": "placeholder",
            "route": "/teams",
            "has_sidebar": false,
            "description": "Team collaboration (coming soon)"
        },
        {
            "id": "extensions",
            "name": "Extensions",
            "status": "mock",
            "route": "/extensions",
            "has_sidebar": true,
            "description": "Manage Chrome extensions for profiles"
        }
    ],
    "components": {
        "main_nav": "src/app/views/components/main-nav/",
        "sidebar": "src/app/views/components/sidebar/",
        "pages": {
            "home": "src/app/views/pages/home/",
            "automation": "src/app/views/pages/automation/",
            "teams": "src/app/views/pages/teams/",
            "extensions": "src/app/views/pages/extensions/"
        }
    },
    "models": [
        {
            "name": "Profile",
            "file": "src/app/models/profile.model.ts",
            "fields": [
                "id",
                "name",
                "path",
                "metadata",
                "isRunning",
                "size",
                "osIcon"
            ]
        },
        {
            "name": "Folder",
            "file": "src/app/models/folder.model.ts",
            "fields": [
                "id",
                "name",
                "icon",
                "color",
                "profileCount"
            ]
        },
        {
            "name": "NavFeature",
            "file": "src/app/models/navigation.model.ts",
            "fields": [
                "id",
                "name",
                "icon",
                "route",
                "hasSidebar",
                "sidebarType",
                "badge"
            ]
        }
    ],
    "services": [
        {
            "name": "ProfileService",
            "file": "src/app/services/profile.service.ts",
            "purpose": "Profile CRUD, browser launching, metadata management"
        },
        {
            "name": "NavigationService",
            "file": "src/app/services/navigation.service.ts",
